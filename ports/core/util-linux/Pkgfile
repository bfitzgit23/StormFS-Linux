name=util-linux
version=2.40.2
release=1
source=(https://www.kernel.org/pub/linux/utils/$name/v${version%.*}/$name-$version.tar.xz)
build_opt="--bindir=/usr/bin  
            --libdir=/usr/lib     
            --runstatedir=/run    
            --sbindir=/usr/sbin   
            --disable-chfn-chsh   
            --disable-login       
            --disable-nologin     
            --disable-su          
            --disable-setpriv     
            --disable-runuser     
            --disable-pylibmount  
            --disable-liblastlog2 
            --disable-static      
            --without-python      
            ADJTIME_PATH=/var/lib/hwclock/adjtime
            --docdir=/usr/share/doc/$name-$version"
build_type=configure_build
