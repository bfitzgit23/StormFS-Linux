name=procps-ng
version=4.0.4
release=1
source=(https://sourceforge.net/projects/$name/files/Production/$name-$version.tar.xz)
pkg_build() {
      

        ./configure --prefix=/usr                           \
            --docdir=/usr/share/doc/$name-$version \
            --disable-static                        \
            --disable-kill                          \
            --with-systemd
        make src_w_LDADD='$(LDADD) -lsystemd'
        make DESTDIR=$PKG install
}

