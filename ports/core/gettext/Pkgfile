name=gettext
version=0.26
release=1
source=(https://ftpmirror.gnu.org/gnu/$name/$name-$version.tar.xz)
build_opt="
	--prefix=/usr \
        --libexecdir=/usr/lib 
        --enable-{shared,static} 
        --disable-{csharp,java,nls} 
        --without-{emacs,git} 
        --with-included-{glib,libcroco,libxml,libunistring
"

pkg_build() {
	autoreconf -fi
	./configure \
		--prefix=/usr \
		--enable-{shared,static} \
		--disable-{csharp,java,nls} \
		--without-{emacs,git} \
		--with-included-{glib,libcroco,libxml,libunistring}
	make
	make DESTDIR=$PKG install
}


bootstrap_build() {
	./configure --disable-shared  --without-{emacs,git} 
	make -j1
	cp -v gettext-tools/src/msgfmt \
	      gettext-tools/src/msgmerge \
	      gettext-tools/src/xgettext \
	      $TOOLS/bin
}
