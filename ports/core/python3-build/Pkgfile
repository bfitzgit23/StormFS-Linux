# Description: A simple, correct PEP517 package builder
# URL: https://github.com/pypa/build
# Maintainer: Tim Biermann, tbier at posteo dot de
# Depends on: python3-packaging python3-pyproject-hooks

name=python3-build
version=1.2.2.post1
release=1
source=(https://pypi.python.org/packages/source/b/build/build-$version.tar.gz)

pkg_build() {
   /usr/bin/python3 -m flit_core.wheel
  /usr/bin/python3 -m installer --destdir=$PKG dist/*.whl
}
