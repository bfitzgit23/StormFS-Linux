name=libtirpc
version=1.3.6
release=1
source=(https://downloads.sourceforge.net/$name/$name-$version.tar.bz2
https://www.linuxfromscratch.org/patches/blfs/svn/libtirpc-1.3.6-gcc15_fixes-1.patch)
build_opt="--disable-gssapi"
bootstrap_opt="--disable-gssapi"
bootstrap_build() {
  patch -Np1 -i ../libtirpc-1.3.6-gcc15_fixes-1.patch
 ./configure --prefix=$TOOLS --disable-gssapi
 make
 make install
}
