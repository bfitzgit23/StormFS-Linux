# Description: Mesa OpenGL Utility library
# URL: https://www.mesa3d.org/
# Maintainer: CRUX Xorg Team, xorg-ports at crux dot nu
# Depends on: mesa

name=glu
version=9.0.3
release=1
source=(https://ftp2.osuosl.org/pub/blfs/conglomeration/Xorg/$name/$name-$version.tar.xz)

build() {
	cd $name-$version
	mkdir build &&
	cd    build &&

meson setup ..              \
      --prefix=$XORG_PREFIX \
      -Dgl_provider=gl      \
      --buildtype=release   &&
ninja
	DESTDIR=$PKG ninja install
	rm -vf $PKG/usr/lib/libGLU.a
}
