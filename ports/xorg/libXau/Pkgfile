# Description: X Authorization routines
# URL: https://xorg.freedesktop.org
# Maintainer:
# Depends on: xorgproto

name=libXau
version=1.0.12
release=1
source=(https://ftp2.osuosl.org/pub/blfs/conglomeration/Xorg/libXau-$version.tar.xz)

build() {
	cd libXau-$version

	./configure $XORG_CONFIG &&
make
	make DESTDIR=$PKG install
}
