# Depends on: llvm

name=potrace
version=1.16
release=1
source=(https://downloads.sourceforge.net/${name}/${name}-${version}.tar.gz)
build_opt="--prefix=/usr
            --disable-static                     
            --docdir=/usr/share/doc/$name-$version 
            --enable-a4                          
            --enable-metric                      
            --with-libpotrace"
