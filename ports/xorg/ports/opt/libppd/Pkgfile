# Depends on: libcupsfilters

name=libppd
version=2.1.1
release=1
source=(https://github.com/OpenPrinting/${name}/releases/download/${version}/${name}-${version}.tar.xz)
build_opt--prefix=/usr                   
            --disable-static                
            --with-cups-rundir=/run/cups    
            --enable-ppdc-utils             
            --docdir=/usr/share/doc/$name-$versiom"
