# Description: BDF to PCF font file converter
# URL: http://xorg.freedesktop.org
# Maintainer: CRUX Xorg Team, xorg-ports at crux dot nu
# Depends on: harfbuzz

name=bdftopcf
version=1.1.1
release=1
source=(http://www.linuxfromscratch.org/blfs/downloads/conglomeration/Xorg/bdftopcf-$version.tar.xz)

build() {
	cd bdftopcf-$version

	./configure $XORG_CONFIG

	make
	make DESTDIR=$PKG install
}
