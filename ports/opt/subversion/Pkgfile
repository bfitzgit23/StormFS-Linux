# Depends on: apr-util sqlite swig serf

name=subversion
version=1.14.5
release=1
source=(https://archive.apache.org/dist/${name}/${name}-${version}.tar.bz2)
pkg_build() {
./configure --prefix=/usr            \
            --disable-static         \
            --with-apache-libexecdir \
            --with-utf8proc=internal &&
make -j1
make -j1 install &&

install -v -m755 -d /usr/share/doc/$name-$version &&
cp      -v -R doc/* /usr/share/doc/$name-$version
}
