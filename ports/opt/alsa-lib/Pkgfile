name=alsa-lib
version=1.2.12
release=1
source=(https://www.alsa-project.org/files/pub/lib/$name-$version.tar.bz2)

build() {
	cd $name-$version
	./configure &&
make
#make doc
	make DESTDIR=$PKG install

