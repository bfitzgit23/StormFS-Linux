# Depends on: yaml graphviz rustc valgrind

name=ruby
version=3.3.4
release=1
source=(https://cache.${name}-lang.org/pub/${name}/${version%.*}/${name}-${version}.tar.xz)
build_opt="-prefix=/usr         
            --disable-rpath       
            --enable-shared       
            --with-valgrind    
            --without-baseruby    
            ac_cv_func_qsort_r=no 
            --docdir=/usr/share/doc/$name-$version"
