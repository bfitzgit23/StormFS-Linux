# Depends on: cmake

name=spirv-headers
version=1.3.296.0
release=1
source=(https://github.com/KhronosGroup/SPIRV-Headers/archive/vulkan-sdk-${version}/SPIRV-Headers-${version}.tar.gz)
pkg_build() {
mkdir build &&
cd    build &&

cmake -D CMAKE_INSTALL_PREFIX=/usr -G Ninja .. &&
ninja
ninja install
}
