# Depends on: glib gobject-introspection libgcrypt gnutls vala python3-gi_docgen docbook-xml docbook-xsl-nons libxslt valgrind  

name=libsecret
version=0.21.7
release=1
source=(https://download.gnome.org/sources/${name}/${version%.*}/${name}-${version}.tar.xz)
build() {
  prt-get isinst bash-completion || \
    PKGMK_LIBSECRET+=' -D bash_completion=disabled'
  prt-get isinst docbook-xsl || PKGMK_LIBSECRET+=' -D manpage=false'
  prt-get isinst vala || PKGMK_LIBSECRET+=' -D vapi=false'

  meson setup build $name-$version $PKGMK_LIBSECRET \
    --prefix=/usr \
    --buildtype=plain \
    --wrap-mode nodownload \
    -D b_lto=true \
    -D b_pie=true \
    -D gtk_doc=false
  meson compile -C build -j ${JOBS:-1}
  DESTDIR=$PKG meson install -C build

  rm -r $PKG/usr/share/locale
}
