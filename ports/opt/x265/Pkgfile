# Depends on: cmake nasm 

name=x265
version=3.6
release=1
source=(https://bitbucket.org/multicoreware/x265_git/downloads/x265_3.6.tar.gz)
pkg_build () {
mkdir bld &&
cd    bld &&

cmake -D CMAKE_INSTALL_PREFIX=/usr \
      -D GIT_ARCHETYPE=1           \
      -W no-dev ../source          &&
make
make install
}
