# Description: Open Source H265/HEVC video encoder
# URL: https://bitbucket.org/multicoreware/x265_git/wiki/Home
# Maintainer: Tim Biermann, tbier at posteo dot de
# Depends on: cmake
# Optional: nasm numactl

name=x265
version=20240216
release=2
source=(https://anduin.linuxfromscratch.org/BLFS/x265/$name-$version.tar.xz)

build() {
 cd $name-$version
mkdir bld &&
cd    bld &&

cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DGIT_ARCHETYPE=1           \
      -Wno-dev ../source          &&
make
make DESTDIR=$PKG install &&
rm -vf $PKG/usr/lib/libx265.a  
}
