# Depends on: adwaita-icon-theme exempi gnome-desktop libhandy libjpeg-turbo libpeas shared-mime-info glib gobject-introspection lcms2 libexif librsvg webp-pixbuf-loader

name=eog
version=45.4
release=1
source=(https://download.gnome.org/sources/${name}/45/${name}-${version}.tar.xz)
pkg_build () {
mkdir build &&
cd    build &&

meson setup --prefix=/usr       \
            --buildtype=release \
            -Dlibportal=false   \
            ..                  &&
ninja
ninja install
}
